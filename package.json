{
  "name": "touch-typist",
  "version": "1.0.0",
  "description": "TypeScript project with Node.js server, React frontend, and CLI tools",
  "main": "dist/server.js",
  "bin": {
    "hello": "./dist/cli/hello.js",
    "segment": "./dist/cli/segment.js"
  },
  "scripts": {
    "build": "tsc && webpack --mode production && cp -r src/public/* dist/public/",
    "build:server": "tsc",
    "build:client": "webpack --mode production",
    "build:dev": "webpack --mode development",
    "start": "node dist/server.js",
    "dev": "npm run build:server && npm run build:dev && node dist/server.js",
    "build:watch": "concurrently \"tsc --watch\" \"webpack --mode development --watch\""
  },
  "dependencies": {
    "express": "^4.18.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/node": "^20.5.0",
    "@types/react": "^18.2.20",
    "@types/react-dom": "^18.2.7",
    "concurrently": "^8.2.0",
    "ts-loader": "^9.4.4",
    "typescript": "^5.1.6",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4"
  },
  "keywords": [
    "typescript",
    "nodejs",
    "react",
    "cli"
  ],
  "author": "",
  "license": "ISC"
}